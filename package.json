{
  "name": "@linqapp/cli",
  "version": "1.8.3",
  "description": "CLI for Linq messaging API",
  "type": "module",
  "bin": {
    "linq": "./bin/run.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "npm run generate:types && tsc",
    "clean": "rm -rf dist",
    "dev": "./bin/dev.js",
    "generate:types": "openapi-typescript openapi.yaml -o src/gen/api-types.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "npm run build && oclif manifest",
    "test": "vitest run",
    "test:watch": "vitest",
    "pack:macos": "oclif pack macos",
    "pack:win": "oclif pack win",
    "pack:deb": "oclif pack deb",
    "prepare": "lefthook install || true"
  },
  "oclif": {
    "bin": "linq",
    "dirname": "linq",
    "commands": {
      "strategy": "pattern",
      "target": "./dist/commands"
    },
    "helpClass": "./dist/help.js",
    "hooks": {
      "prerun": "./dist/hooks/prerun.js",
      "postrun": "./dist/hooks/postrun.js"
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete"
    ],
    "topicSeparator": " ",
    "targets": [
      "darwin-x64",
      "darwin-arm64",
      "linux-x64",
      "linux-arm64",
      "win32-x64",
      "win32-arm64"
    ],
    "macos": {
      "identifier": "com.linqapp.cli"
    },
    "topics": {
      "chats": {
        "description": "Manage chats and conversations"
      },
      "messages": {
        "description": "Send and manage messages"
      },
      "webhooks": {
        "description": "Manage webhook subscriptions"
      },
      "config": {
        "description": "Manage CLI configuration and profiles"
      },
      "attachments": {
        "description": "Manage file attachments"
      }
    }
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@oclif/core": "^4.8.0",
    "@oclif/plugin-autocomplete": "^3.2.40",
    "@oclif/plugin-help": "^6.2.37",
    "@sentry/node": "^10.38.0",
    "chalk": "^5.6.2",
    "open": "^11.0.0",
    "openapi-fetch": "^0.16.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@oclif/test": "^4.1.16",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^25.2.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "lefthook": "^2.1.0",
    "oclif": "^4.22.77",
    "openapi-typescript": "^7.12.0",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "linq",
    "cli",
    "messaging",
    "imessage",
    "sms"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/linq-team/linq-cli.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
